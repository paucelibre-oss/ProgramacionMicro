#ifndef API_INC_API_DELAY_H_
#define API_INC_API_DELAY_H_

#include "stm32f4xx_hal.h"
#include <stdint.h> /*Libreria necesaria para reconocimiento de vatiables tipo UINT*/
#include <stdbool.h>/*Libreria necesaria para reconocimiento de variables tipo boleanas*/
#include "main.h"        // para que reconozca LD2_GPIO_Port y LD2_Pin

typedef uint32_t tick_t;
typedef bool bool_t;

typedef struct{
   tick_t startTime;
   tick_t duration;
   bool_t running;
} delay_t;

/*USADOS PARA EL PUNTO TRES ESPECIFICAMENTE*/
typedef struct {
    tick_t period;     // periodo en ms
    uint8_t repeats;   // cantidad de veces a repetir
} blinkPattern_t;

void delayInit(delay_t * delay, tick_t duration);
bool_t delayRead(delay_t * delay);
bool_t delayIsRunning(delay_t * delay);
void delayWrite(delay_t * delay, tick_t duration);
/*Funciones del punto 2 de la practica 4*/
void debounceFSM_init();
void debounceFSM_update();

#endif /* API_INC_API_DELAY_H_ */
